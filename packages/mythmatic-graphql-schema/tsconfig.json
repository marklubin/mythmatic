{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018"],
    "module": "commonjs",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "./node_modules/@types/node/index.d.ts"]
}
